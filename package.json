{
  "name": "jingo-2",
  "version": "1.0.0",
  "description": "A nodejs based wiki engine",
  "author": "Claudio Cicali <claudio.cicali@gmail.com>",
  "keywords": [
    "wiki",
    "git",
    "engine",
    "cms",
    "markdown"
  ],
  "scripts": {
    "build": "npm run clean; echo TBD",
    "prepublish": "echo TBD",
    "test": "tsc; nyc ava -v",
    "watch-test": "ava -v -w",
    "clean": "rm -rf dist/*; mkdir -p dist; ln -s ../src/views dist/; ln -s ../src/public dist/; ln -s ../src/lib/config/defaults.json dist/config-defaults.json",
    "start": "NODE_ENV=development tsc-watch --outDir ./dist --onSuccess 'npx nodemon -V -w jingo -w config.json jingo -c config.json'",
    "start-dev": "npm run clean; npm test; npm start",
    "sloc": "sloc dist/ -e vendor"
  },
  "_moduleAliases": {
    "@middlewares": "dist/middlewares",
    "@events": "dist/events",
    "@server": "dist/server",
    "@sdk": "dist/sdk/index",
    "@lib": "dist/lib",
    "@routes": "dist/routes"
  },
  "nyc": {
    "exclude": [
      "**/spec.js"
    ]
  },
  "ava": {
    "require": [
      "module-alias/register"
    ],
    "files": [
      "dist/**/**/spec.js",
      "dist/api/**/spec.js"
    ],
    "source": [
      "dist/**/**/spec.js"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/boom": "^7.1.0",
    "@types/express": "^4.17.2",
    "@types/fs-extra": "^4.0.3",
    "@types/markdown-it": "0.0.4",
    "@types/method-override": "0.0.31",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.12.9",
    "@types/sinon": "^4.0.0",
    "ava": "^3.8.2",
    "cheerio": "^1.0.0-rc.2",
    "editorconfig": "^0.15.0",
    "gulp": "^4.0.2",
    "gulp-ava": "^3.0.0",
    "gulp-cli": "^2.0.1",
    "gulp-filter": "^5.1.0",
    "gulp-print": "^5.0.0",
    "gulp-typescript": "^4.0.2",
    "memfs": "^2.6.0",
    "mock-fs": "^4.4.2",
    "mountfs": "^0.5.0",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "sinon": "^7.5.0",
    "supertest": "^4.0.2",
    "tmp": "0.0.33",
    "ts-node": "^8.5.2",
    "tsc-watch": "^4.0.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@types/passport": "^1.0.3",
    "body-parser": "^1.19.0",
    "commander": "^2.12.1",
    "comment-json": "^1.1.3",
    "cookie-session": "^2.0.0-beta.3",
    "csurf": "^1.9.0",
    "date-fns": "^1.29.0",
    "es6-promise": "^4.2.8",
    "express": "^4.17.1",
    "express-boom": "^3.0.0",
    "express-flash": "0.0.2",
    "express-handlebars": "^3.1.0",
    "express-validator": "^4.3.0",
    "flat": "^4.0.0",
    "helmet": "^3.21.2",
    "highlight.js": "^9.12.0",
    "just-handlebars-helpers": "^1.0.14",
    "lodash": "^4.17.19",
    "markdown-it": "^10.0.0",
    "markdown-it-anchor": "^5.2.5",
    "markdown-it-emoji": "^1.4.0",
    "markdown-it-footnote": "^3.0.2",
    "markdown-it-table-of-contents": "^0.4.4",
    "method-override": "^3.0.0",
    "module-alias": "^2.0.3",
    "morgan": "^1.9.1",
    "node-ipc": "^9.1.1",
    "passport": "^0.4.0",
    "passport-local-htpasswd": "^0.1.1",
    "semver": "^5.4.1",
    "simple-git": "^1.85.0"
  }
}
