{
  "name": "jingo-2",
  "version": "1.0.0",
  "description": "A nodejs based wiki engine",
  "author": "Claudio Cicali <claudio.cicali@gmail.com>",
  "keywords": [
    "wiki",
    "git",
    "engine",
    "cms",
    "markdown"
  ],
  "scripts": {
    "build": "echo TBD",
    "prepublish": "npm run build",
    "test": "npx tsc; npx ava -v",
    "clean": "rm -rf dist/*; mkdir -p dist; ln -s ../src/views dist/; ln -s ../src/public dist/",
    "start-dev": "npm run clean; npm test; NODE_ENV=development tsc-watch --outDir ./dist --onSuccess 'npx nodemon -w jingo -w config.json jingo -c config.json'"
  },
  "_moduleAliases": {
    "@api": "dist/api/index",
    "@lib": "dist/lib",
    "@routes": "dist/routes"
  },
  "ava": {
    "require": [
      "module-alias/register"
    ],
    "files": [
      "dist/**/**/spec.js"
    ],
    "source": [
      "dist/**/**/spec.js"
    ]
  },
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.16.7",
    "@types/cookie-parser": "^1.4.1",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.0.39",
    "@types/express-session": "^1.15.5",
    "@types/express-validator": "^3.0.0",
    "@types/fs-extra": "^4.0.3",
    "@types/markdown-it": "0.0.4",
    "@types/method-override": "0.0.31",
    "@types/morgan": "^1.7.35",
    "ava": "^0.23.0",
    "editorconfig": "^0.15.0",
    "nodemon": "^1.12.1",
    "sinon": "^4.1.2",
    "tmp": "0.0.33",
    "tsc-watch": "^1.0.8",
    "tslint": "^5.8.0",
    "typescript": "^2.6.1"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "commander": "^2.12.1",
    "comment-json": "^1.1.3",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.3",
    "errorhandler": "^1.5.0",
    "express": "^4.16.2",
    "express-flash": "0.0.2",
    "express-handlebars": "^3.0.0",
    "express-session": "^1.15.6",
    "express-validator": "^4.3.0",
    "fs-extra": "^4.0.2",
    "markdown-it": "^8.4.0",
    "method-override": "^2.3.10",
    "module-alias": "^2.0.3",
    "morgan": "^1.9.0"
  }
}
