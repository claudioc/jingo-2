{
  // The directory from which Jingo will start reading and writing documents
  "documentRoot": "",

  // Declare that the jingo server is running behind a proxy with that path
  "mountPath": "/",

  // Customization in term of CSS stylesheets and/or JavaScript scripts
  "custom": {
    "title": "Jingo",
    "logo": "",
    "includes": [],
    "styles": [],
    "scripts": []
  },

  // Configuration of the wiki itself
  "wiki": {
    "index": "Home",
    // Specify a base path common to all the pages (defaults to /wiki)
    "basePath": "wiki"
  },

  // Enable/Disable/Configure optional features
  "features": {
    // The code syntax highlighter
    "codeHighlighter": {
      "enabled": true,
      "theme": "default"
    },

    // Configuration for the IPC support
    "ipcSupport": {
      "enabled": false,
      "server": ""
    },

    // Configuration for git support
    "gitSupport": {
      "enabled": false,
      "remote": "",
      // Jingo will use the current branch name for its operations,
      // but you should specify the name of the branch for security reasons
      "branch": "master"
    }
  }
}
