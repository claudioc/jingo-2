{
  // The directory from which Jingo will start reading and writing documents
  "documentRoot": "",

  // Declare that the jingo server is running behind a proxy with that path
  "proxyPath": "/",

  // Configuration for the IPC support
  "ipc": {
    "enabled": false,
    "server": ""
  },

  // Configuration of the wiki itself
  "wiki": {
    "index": "Home",
    // Specify a base path common to all the pages (defaults to /wiki)
    "basePath": "wiki"
  }
}

