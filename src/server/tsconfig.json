{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "target": "es2020",
    "outDir": "dist/",
    "inlineSourceMap": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "pretty": true,
    "esModuleInterop": false,
    "removeComments": true,
    "allowJs": true,
    "lib": [
      "es2020"
    ],
    "baseUrl": ".",
    "paths": {
      "@server": [
        "server"
      ],
      "@sdk": [
        "sdk/index"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@events/*": [
        "events/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
      "@routes/*": [
        "routes/*"
      ]
    }
  },
  "include": [
    "index.ts",
    "**/*.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": false
}
