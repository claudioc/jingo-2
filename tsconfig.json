{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "target": "es6",
    "outDir": "dist/",
    "inlineSourceMap": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "pretty": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowJs": true,
    "lib": [
      "es2016"
    ],
    "baseUrl": "src",
    "paths": {
      "@server": ["server"],
      "@sdk": ["sdk/index"],
      "@middlewares/*": ["middlewares/*"],
      "@events/*": ["events/*"],
      "@lib/*": ["lib/*"],
      "@routes/*": ["routes/*"]
    }
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": false
}

