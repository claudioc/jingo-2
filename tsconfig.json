{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "strictNullChecks": false,
    "target": "es6",
    "outDir": "dist/",
    "inlineSourceMap": true,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "removeComments": true,
    "allowJs": true,
    "lib": [
      "es2016"
    ],
    "baseUrl": "src",
    "paths": {
      "@api": ["api/index"],
      "@lib/*": ["lib/*"],
      "@routes/*": ["routes/*"]
    }
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "compileOnSave": true,
  "buildOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}

